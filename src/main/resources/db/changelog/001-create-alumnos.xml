<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

	<changeSet id="001-create-alumnos-table"
		author="ciro.rodriguez">
		<createTable tableName="alumnos">
			<column name="id" type="BIGINT" autoIncrement="false">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="nombre" type="VARCHAR(100)">
				<constraints nullable="false" />
			</column>
			<column name="apellido" type="VARCHAR(100)">
				<constraints nullable="false" />
			</column>
			<column name="estado" type="VARCHAR(20)">
				<constraints nullable="false" />
			</column>
			<column name="edad" type="INTEGER">
				<constraints nullable="false" />
			</column>
		</createTable>
	</changeSet>

</databaseChangeLog>
